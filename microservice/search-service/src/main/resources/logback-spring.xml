<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <property name="SERVICE_NAME" value="search-service"/>
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>

    <!-- Console Appender with JSON format and prefix -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <pattern>
                    <pattern>
                        {
                        "prefix": "[${SERVICE_NAME}] %level %logger{36}",
                        "timestamp": "%date{yyyy-MM-dd'T'HH:mm:ss.SSSZ}",
                        "service": "${SERVICE_NAME}",
                        "level": "%level",
                        "correlationId": "%mdc{correlationId}",
                        "userId": "%mdc{userId}",
                        "searchKeyword": "%mdc{searchKeyword}",
                        "productCode": "%mdc{productCode}",
                        "requestUri": "%mdc{requestUri}",
                        "thread": "%thread",
                        "logger": "%logger{36}",
                        "message": "%message",
                        "stackTrace": "%exception"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <!-- Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${SERVICE_NAME}.log</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <pattern>
                    <pattern>
                        {
                        "prefix": "[${SERVICE_NAME}] %level %logger{36}",
                        "timestamp": "%date{yyyy-MM-dd'T'HH:mm:ss.SSSZ}",
                        "service": "${SERVICE_NAME}",
                        "level": "%level",
                        "correlationId": "%mdc{correlationId}",
                        "userId": "%mdc{userId}",
                        "searchKeyword": "%mdc{searchKeyword}",
                        "productCode": "%mdc{productCode}",
                        "requestUri": "%mdc{requestUri}",
                        "thread": "%thread",
                        "logger": "%logger{36}",
                        "message": "%message",
                        "stackTrace": "%exception"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${SERVICE_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Async File Appender for better performance -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="FILE"/>
    </appender>

    <!-- Profile: Development -->
    <springProfile name="dev,local,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.shop.search_service" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

    <!-- Profile: Production -->
    <springProfile name="prod,production">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
        </root>
        <logger name="com.shop.search_service" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
        </logger>
        <!-- Reduce noise from frameworks -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.elasticsearch" level="WARN"/>
    </springProfile>

</configuration>